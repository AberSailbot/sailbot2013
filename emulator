#!/usr/bin/env python
import socket
import sys
import re
from sailbot import Boat

boat = Boat('waypoints.pnts')

sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
server_address = ('localhost', 10006)
sock.bind(server_address)
print >>sys.stderr, 'starting up on %s port %s' % server_address

events = [
          {
            #events with arguments
            'set rudder': lambda arg: boat.arduino.set_rudder(arg),
            'set sail': lambda arg: boat.arduino.set_sail(arg),
            'get waypointnorthing': lambda n: boat.waypoints.get_waypoint(n).long,
            'get waypointeasting': lambda n: boat.waypoints.get_waypoint(n).lat
          },
          {
            #events without arguments
            'get compass': lambda: boat.arduino.get_compass(),
            'get wind_dir': lambda: boat.arduino.get_wind(),
            'get northing': lambda: boat.gps.position.long,
            'get easting': lambda: boat.gps.position.lat,
            'get waypointnum': lambda: boat.waypoints.waypointNumber,
            'get waypointdist': lambda: boat.waypoints.distance(),
            'get waypointdir': lambda: int(boat.waypoints.bearing())
          }
        ]

def get_event(s):
    for e in events[0]:
        match = re.match(e, s)
        if match:
            arg = s.split()[-1]
            return events[0][e](int(arg))
    for e in events[1]:
        match = re.match(e, s)
        if match:
            return events[1][e]()
while True:
    sock.listen(1)
    connection, client_address = sock.accept()
    try:
        while True:
            data = ''
            while True:
                c = connection.recv(1)
                if c == '\n' or c == '':
                    break
                else:
                    data += c

            print >>sys.stderr, 'received "%s"' % data
            if data:
                msg = get_event(data)
                if msg is not None:
                    connection.sendall(str(msg) + '\n')
                    print 'Sent : ' + str(msg)
                else:
                    print 'Didn\'t send a message for a set'
            else:
                break
    finally:
        connection.close()
